<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:orientation="vertical" >
    
     
   <TableLayout
       android:id="@+id/tableLayout1"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@+id/sv_search"
       android:layout_centerInParent="true" >
 
    <!-- frist image columns -->

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dip"
        android:padding="5dip" >
 
		<ImageView
		    android:id="@+id/image"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_weight="1"
		    android:scaleType="fitCenter"
		    android:src="@drawable/ic_board" />
    
        <ImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_guides1" />

    </TableRow>
    <!-- frist textview column -->
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" 
        android:layout_margin="4dip">
        
         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:gravity="center_horizontal"
             android:text="@string/boardlistTitle" />

         <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
            android:text="@string/gameguideslistTitle2" 
            android:layout_weight="1" 
            android:gravity="center_horizontal" />


    </TableRow>
    
    <!-- second image columns -->

    <TableRow
        android:id="@+id/tableRow3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dip"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_guides3" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_ck" />

    </TableRow>
    
    <!-- second textview column -->
   <TableRow
        android:id="@+id/tableRow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" 
        android:layout_margin="4dip">
        
         <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:text="@string/gameguideslistTitle3" 
            android:layout_weight="1" 
            android:gravity="center_horizontal"
            />
         
         <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:text="@string/facebook" 
            android:layout_weight="1" 
            android:gravity="center_horizontal"
            />

    </TableRow>
 
</TableLayout>


    
</RelativeLayout>