<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mainTitle" />
    
           <ImageView
            android:id="@+id/imageBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:adjustViewBounds="true"
            android:scaleType="center" /> 
    
   <TableLayout 
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:layout_centerInParent="true"
    >
 
    <!-- 2 columns -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" 
        android:layout_margin="4dip">
 
<ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:scaleType="center"
        android:src="@drawable/ic_board" 
        android:layout_weight="1" />
    
        <ImageView
            android:id="@+id/image1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:scaleType="center"
            android:src="@drawable/ic_guides1" 
            android:layout_weight="1" />
        
        <ImageView
            android:id="@+id/image2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:scaleType="center"
            android:src="@drawable/ic_guides2" 
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/image3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/ic_guides3" 
            android:layout_weight="1" />
    </TableRow>
 
    <!-- edittext span 2 column -->
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip" 
        android:layout_margin="4dip">
        
         <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:text="@string/boardlistTitle" 
            android:layout_weight="1" 
            android:gravity="center_horizontal"
            />
         <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:text="@string/gameguideslistTitle1" 
            android:layout_weight="1" 
            android:gravity="center_horizontal" />
         <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:text="@string/gameguideslistTitle2" 
            android:layout_weight="1" 
            android:gravity="center_horizontal" />
         <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
            android:text="@string/gameguideslistTitle3" 
            android:layout_weight="1" 
            android:gravity="center_horizontal" />

    </TableRow>
 
</TableLayout>
    
</RelativeLayout>